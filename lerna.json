{
  "version": "0.6.0",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "ignoreChanges": [
        "*.md"
      ],
      "verifyAccess": false,
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  },
  "useWorkspaces": true
}
