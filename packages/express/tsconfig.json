{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "types/**/*.ts",
    "src/**/*.ts"
  ]
}
