{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "../",
    "rootDir": "../",
    "paths": {
      "@main/*": [
        "app/main/src/*"
      ],
      "@preload/*": [
        "app/preload/src/*"
      ],
      "@renderer/*": [
        "app/renderer/src/*"
      ],
      "types/*": [
        "app/renderer/types/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    ".",
    "../app"
  ],
  "exclude": []
}
