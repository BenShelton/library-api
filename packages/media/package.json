{
  "name": "@library-api/media",
  "version": "0.1.0",
  "description": "A cross-platform application that simplifies showing media for meetings of Jehovah's Witnesses.",
  "main": "app/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "ci": "yarn lint && yarn test",
    "clean": "rm -rf dist",
    "dev": "node scripts/watch.js",
    "package": "electron-builder build --config electron-builder.config.js",
    "lint": "yarn tsc:all && eslint . --ext .js,.ts,.vue",
    "start": "electron dist/index.js",
    "test": "echo \"No tests written\"",
    "test:watch": "yarn test",
    "tsc:all": "yarn tsc:main & yarn tsc:preload && yarn tsc:renderer",
    "tsc:main": "tsc -p app/main/tsconfig.json",
    "tsc:preload": "tsc -p app/preload/tsconfig.json",
    "tsc:renderer": "vue-tsc --noEmit -p app/renderer/tsconfig.json",
    "husky:lint": "yarn lint --fix",
    "husky:test": "yarn test",
    "husky:test:staged": "yarn test"
  },
  "dependencies": {
    "@library-api/core": "0.1.0",
    "electron-aspect-ratio-browser-window": "^1.0.2",
    "electron-store": "^8.0.0",
    "vue": "^3.0.11",
    "vue-router": "^4.0.6"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.11",
    "electron": "^12.0.6",
    "electron-builder": "^22.11.1",
    "eslint-plugin-vue": "^7.9.0",
    "vite": "^2.2.4",
    "vue-tsc": "^0.1.0"
  },
  "author": {
    "name": "BenShelton",
    "email": "bensheltonjones@gmail.com"
  },
  "keywords": [
    "jw",
    "media",
    "library",
    "meetings",
    "publications",
    "api",
    "electron",
    "cross-platform"
  ],
  "license": "MIT"
}
